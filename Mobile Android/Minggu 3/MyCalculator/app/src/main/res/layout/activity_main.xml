<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/tampil_angka"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="70dp"
        android:ems="10"
        android:inputType="numberDecimal"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="50dp">
        <Button
            android:id="@+id/seven"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="25dp"
            android:textSize="23sp"
            android:textStyle="bold"
            android:text="7"
            android:textColor="@color/textcalc"
            android:onClick="btn_seven"/>
        <Button
            android:id="@+id/four"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_below="@+id/seven"
            android:layout_marginLeft="5dp"
            android:textSize="23sp"
            android:textStyle="bold"
            android:text="4"
            android:textColor="@color/textcalc"
            android:onClick="btn_four"/>
        <Button
            android:id="@+id/one"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_below="@+id/four"
            android:layout_marginLeft="5dp"
            android:text="1"
            android:textSize="23sp"
            android:textStyle="bold"
            android:textColor="@color/textcalc"
            android:onClick="btn_one"/>
        <Button
            android:id="@+id/zero"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_below="@id/one"
            android:layout_marginLeft="5dp"
            android:textSize="23sp"
            android:textStyle="bold"
            android:text="0"
            android:textColor="@color/textcalc"
            android:onClick="btn_zero"/>

        <Button
            android:id="@+id/eight"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/seven"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="12dp"
            android:textSize="23sp"
            android:textStyle="bold"
            android:text="8"
            android:textColor="@color/textcalc"
            android:onClick="btn_eight"/>
        <Button
            android:id="@+id/five"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_below="@+id/eight"
            android:layout_toRightOf="@+id/four"
            android:layout_marginLeft="12dp"
            android:textSize="23sp"
            android:textStyle="bold"
            android:text="5"
            android:textColor="@color/textcalc"
            android:onClick="btn_five"/>
        <Button
            android:id="@+id/two"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_below="@+id/five"
            android:layout_toRightOf="@+id/one"
            android:layout_marginLeft="12dp"
            android:text="2"
            android:textSize="23sp"
            android:textStyle="bold"
            android:textColor="@color/textcalc"
            android:onClick="btn_two"/>
        <Button
            android:id="@+id/multi"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_below="@+id/two"
            android:layout_toRightOf="@+id/zero"
            android:layout_marginLeft="12dp"
            android:text="x"
            android:textSize="23sp"
            android:textStyle="bold"
            android:textColor="@color/textcalc"
            android:onClick="btn_multi"/>

        <Button
            android:id="@+id/nine"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/eight"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="12dp"
            android:textSize="23sp"
            android:textStyle="bold"
            android:text="9"
            android:textColor="@color/textcalc"
            android:onClick="btn_nine"/>
        <Button
            android:id="@+id/six"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_below="@+id/nine"
            android:layout_toRightOf="@+id/five"
            android:layout_marginLeft="12dp"
            android:textSize="23sp"
            android:textStyle="bold"
            android:text="6"
            android:textColor="@color/textcalc"
            android:onClick="btn_six"/>
        <Button
            android:id="@+id/three"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_below="@+id/six"
            android:layout_toRightOf="@+id/two"
            android:layout_marginLeft="12dp"
            android:text="3"
            android:textSize="23sp"
            android:textStyle="bold"
            android:textColor="@color/textcalc"
            android:onClick="btn_three"/>
        <Button
            android:id="@+id/div"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_below="@+id/three"
            android:layout_toRightOf="@+id/multi"
            android:layout_marginLeft="12dp"
            android:text="/"
            android:textSize="23sp"
            android:textStyle="bold"
            android:textColor="@color/textcalc"
            android:onClick="btn_div"/>

        <Button
            android:id="@+id/del"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/nine"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="12dp"
            android:textSize="30sp"
            android:textStyle="bold"
            android:text="C"
            android:textColor="@color/textcalc"
            android:onClick="btn_del"/>
        <Button
            android:id="@+id/add"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_below="@+id/del"
            android:layout_toRightOf="@+id/six"
            android:layout_marginLeft="12dp"
            android:textSize="23sp"
            android:textStyle="bold"
            android:text="+"
            android:textColor="@color/textcalc"
            android:onClick="btn_add"/>
        <Button
            android:id="@+id/min"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_below="@+id/add"
            android:layout_toRightOf="@+id/three"
            android:layout_marginLeft="12dp"
            android:text="-"
            android:textSize="23sp"
            android:textStyle="bold"
            android:textColor="@color/textcalc"
            android:onClick="btn_min"/>
        <Button
            android:id="@+id/equal"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_below="@+id/min"
            android:layout_toRightOf="@+id/div"
            android:layout_marginLeft="12dp"
            android:text="="
            android:textSize="23sp"
            android:textStyle="bold"
            android:textColor="@color/textcalc"
            android:onClick="btn_equal"/>
    </RelativeLayout>
    
</LinearLayout>