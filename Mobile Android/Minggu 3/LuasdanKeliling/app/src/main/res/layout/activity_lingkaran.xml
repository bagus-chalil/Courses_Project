<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".lingkaran">

    <TextView
        android:id="@+id/subjudul_l"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="25dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@color/lingkaran"
        android:textAlignment="center"
        android:textSize="25sp"
        android:text="@string/lingkaran" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:layout_marginHorizontal="15dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/luas_l"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Mengitung Luas dan Keliling"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/jari_l"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/jari"
            android:textSize="10sp" />
        <EditText
            android:id="@+id/jari_lingkaran"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:inputType="numberDecimal"/>
        <Button
            android:id="@+id/btn_luas2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="230dp"
            android:text="@string/hitung"
            android:onClick="btn_luas_l"/>
        <TextView
            android:id="@+id/hasil_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hasil_l"
            android:textSize="20sp"/>
        <TextView
            android:id="@+id/hasil_kl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/hasil_k"
            android:textSize="20sp"/>
        <Button
            android:id="@+id/back"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="back"
            android:onClick="back"
            android:background="@color/back"
            android:layout_marginLeft="225dp"/>
        <Button
            android:id="@+id/reset"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reset"
            android:background="@color/reset"
            android:onClick="reset"/>
    </LinearLayout>

</RelativeLayout>